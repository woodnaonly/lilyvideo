<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white"
             android:paddingBottom="@dimen/dp_10"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">
    <include layout="@layout/common_layout_recyclerview"/>
    <RelativeLayout android:id="@+id/search_empty_view" android:visibility="gone" android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
        <ImageView android:id="@+id/search_empty_image" android:layout_width="wrap_content"
                   android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_200"
                   android:src="@drawable/empty" android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"/>
        <TextView android:textColor="@color/black" android:id="@+id/no_data" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="没有观看影片记录"
                  android:layout_below="@id/search_empty_image" android:layout_centerHorizontal="true"/>
        <TextView android:textColor="@color/color_bebebe" android:id="@+id/no_dat2" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:text="快去观看影片吧"
                  android:layout_below="@id/no_data" android:layout_centerHorizontal="true"/>
        <TextView android:textColor="@color/color_bebebe" android:id="@+id/search_label_bottom"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/dp_100" android:layout_marginTop="@dimen/dp_50"
                  android:layout_below="@id/no_data"/>
        <TextView android:textColor="@color/color_d2B588" android:id="@+id/search_label_bottom_right"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_50" android:layout_toRightOf="@id/search_label_bottom"
                  android:layout_below="@id/no_data"/>
    </RelativeLayout>
</FrameLayout>