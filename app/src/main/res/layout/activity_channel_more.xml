<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
              android:id="@id/more"
              android:background="@color/black" android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
        <RelativeLayout android:orientation="horizontal" android:background="@color/color_323232"
                        android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@id/classify_back" android:layout_width="@dimen/dp_30"
                       android:layout_height="@dimen/dp_30" android:layout_marginLeft="@dimen/dp_15"
                       android:layout_marginTop="@dimen/dp_10" android:layout_marginBottom="@dimen/dp_10"
                       android:src="@drawable/ic_back_brown" android:scaleType="centerInside"
                       android:layout_alignParentLeft="true"/>
            <TextView android:textSize="@dimen/sp_20" android:textColor="@color/color_ccb084"
                      android:gravity="center" android:id="@id/mian_search_text" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10"
                      android:text="热门专题" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView android:orientation="vertical" android:id="@+id/mRecyclerView"
                                                android:background="@color/black" android:layout_width="fill_parent"
                                                android:layout_height="fill_parent"/>
    </LinearLayout>
</LinearLayout>