<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white"
                android:padding="@dimen/dp_10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/sp_14" android:textStyle="bold" android:ellipsize="end" android:id="@+id/tv_q"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/dp_20" android:text="Q:视频卡顿怎么办？" android:lines="1"/>
    <TextView android:textColor="@color/color_969696" android:ellipsize="end" android:id="@+id/tv_a"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dp_10" android:layout_marginRight="@dimen/dp_50"
              android:text="A:请检查你的网络是否正常，请检查你的网络是…A:请检查你的网络是否正常，请检查你的网络是…" android:lines="1"
              android:layout_below="@id/tv_q"/>
    <ImageView android:id="@+id/iv_nav" android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_margin="@dimen/dp_10" android:src="@drawable/ic_arrow_right_brown"
               android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
    <View android:background="@color/color_f9f9f9" android:layout_width="fill_parent"
          android:layout_height="@dimen/dp_1" android:layout_marginTop="@dimen/dp_20" android:layout_below="@id/tv_a"/>
</RelativeLayout>