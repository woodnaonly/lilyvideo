<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/history_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:id="@+id/cardView" android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8"
                                        android:foreground="?android:selectableItemBackground"
                                        android:layout_marginStart="@dimen/dp_12"
                                        android:layout_marginEnd="@dimen/dp_12" app:cardBackgroundColor="@color/white"
                                        app:cardCornerRadius="@dimen/dp_5" app:cardElevation="@dimen/dp_1">
        <ImageView android:id="@+id/his_iamage_i"
                   android:scaleType="fitXY"
                   android:background="@color/color_loading" android:layout_width="@dimen/dp_120"
                   android:layout_height="@dimen/dp_80" android:layout_centerHorizontal="true"/>
    </androidx.cardview.widget.CardView>
    <TextView android:id="@+id/his_info_title_t" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_8"
              android:maxWidth="@dimen/dp_80" android:singleLine="true" android:layout_below="@id/cardView"
              android:layout_centerHorizontal="true" android:layout_marginStart="@dimen/dp_8"
              android:layout_marginEnd="@dimen/dp_8"/>
</RelativeLayout>