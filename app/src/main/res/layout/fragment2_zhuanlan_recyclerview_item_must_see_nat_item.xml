<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@drawable/common_shape_solid_white_corner5_zhuanlan"
                                             android:padding="@dimen/dp_14" android:layout_width="@dimen/dp_250"
                                             android:layout_height="wrap_content"
                                             android:layout_margin="@dimen/dp_5">
    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/iv_head"
                                                  android:background="@drawable/shape_circle_b4854d"
                                                  android:padding="@dimen/dp_2"
                                                  android:layout_width="@dimen/dp_46"
                                                  android:layout_height="@dimen/dp_46"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  app:civ_border_color="@color/color_fedeab"
                                                  app:civ_border_width="1.0dip"
                                                  app:layout_constraintTop_toTopOf="parent"/>
    <TextView android:textSize="@dimen/text_content" android:textColor="@color/color_323232" android:id="@+id/tv_title"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dp_14" app:layout_constraintBottom_toTopOf="@+id/tv_date"
              android:text="9113221321213"
              app:layout_constraintLeft_toRightOf="@+id/iv_head" app:layout_constraintTop_toTopOf="@+id/iv_head"/>
    <TextView android:textColor="@color/color_969696" android:id="@+id/tv_date" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintBottom_toBottomOf="@+id/iv_head" app:layout_constraintLeft_toRightOf="@+id/iv_head"
              android:text="9113221321213"
              app:layout_constraintTop_toBottomOf="@+id/tv_title" app:layout_constraintStart_toStartOf="@+id/tv_title"
              android:layout_marginStart="8dp"/>
    <TextView android:textColor="@color/color_323232" android:ellipsize="end" android:id="@+id/tv_des"
              android:text="9113221321213"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dp_14" android:lines="1"
              app:layout_constraintTop_toBottomOf="@+id/iv_head"
              app:layout_constraintStart_toStartOf="parent"/>
    <View android:id="@+id/view" android:background="@color/color_dbdbdb" android:layout_width="fill_parent"
          android:layout_height="@dimen/dp_0_5" android:layout_marginTop="@dimen/dp_14"
          app:layout_constraintTop_toBottomOf="@+id/tv_des" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_choose"
              android:background="@drawable/shape_button_bg" android:paddingLeft="@dimen/dp_10"
              android:paddingTop="@dimen/dp_2" android:paddingRight="@dimen/dp_10" android:paddingBottom="@dimen/dp_2"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dp_14" android:text="立即选片" app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/view"/>
</androidx.constraintlayout.widget.ConstraintLayout>