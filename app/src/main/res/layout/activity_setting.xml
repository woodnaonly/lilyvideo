<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@color/app_black"
                                             android:layout_width="fill_parent"
                                             android:layout_height="fill_parent">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/relativeLayout"
                    android:background="@color/color_313233" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
        <ImageView android:id="@+id/setting_back" android:padding="@dimen/dp_8" android:layout_width="wrap_content"
                   android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10"
                   android:layout_marginTop="@dimen/dp_10" android:layout_marginBottom="@dimen/dp_10"
                   android:src="@drawable/ic_back_brown" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="18.0sp" android:textColor="@color/color_ccb084" android:gravity="center"
                  android:id="@+id/promotion_title_t" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:text="设置"
                  android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/setting_usernameger_l" android:background="@color/color_313233"
                    android:layout_width="0.0dip" android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/relativeLayout">
        <TextView android:textColor="@color/white" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_15" android:text="账户管理"/>
        <ImageView android:id="@+id/imageView2" android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_margin="@dimen/dimen_15" android:layout_alignParentRight="true"
                   android:layout_centerVertical="true" app:srcCompat="@drawable/ic_arrow_right_brown"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/setting_clear_l" android:background="@color/color_313233"
                    android:layout_width="0.0dip" android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_11" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/setting_usernameger_l">
        <TextView android:textColor="@color/white" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_15" android:text="清理缓存"/>
        <TextView android:textColor="@color/color_ccb084" android:id="@+id/setting_size_pg_t"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_margin="@dimen/dimen_15" android:text="0.0 KB" android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/relativeLayout4" android:background="@color/color_313233"
                    android:layout_width="0.0dip" android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/setting_clear_l">
        <TextView android:textColor="@color/white" android:id="@+id/setting_version_t"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_margin="@dimen/dimen_15" android:text="当前版本"/>
        <TextView android:textSize="@dimen/sp_12" android:textColor="@color/color_ccb084" android:id="@+id/tv_isUpdate"
                  android:background="@drawable/shape_get_verification3" android:layout_width="wrap_content"
                  android:layout_height="@dimen/dp_28" android:layout_marginRight="@dimen/dimen_15"
                  android:visibility="gone"
                  android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/setting_xieyi_l" android:background="@color/color_313233"
                    android:layout_width="0.0dip" android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/relativeLayout4">
        <TextView android:textColor="@color/white" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_15" android:text="用户协议"/>
        <ImageView android:id="@+id/imageView21" android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_margin="@dimen/dimen_15" android:layout_alignParentRight="true"
                   android:layout_centerVertical="true" app:srcCompat="@drawable/ic_arrow_right_brown"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>