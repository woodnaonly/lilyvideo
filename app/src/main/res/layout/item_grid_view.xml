<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center"
              android:orientation="vertical"
              android:paddingTop="@dimen/dp_5" android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/list_button" android:background="@color/color_loading"
                   android:layout_width="fill_parent" android:layout_height="@dimen/dp_150"
                   android:scaleType="fitXY"/>
        <TextView android:textColor="@color/white" android:gravity="center|right" android:layout_gravity="bottom"
                  android:id="@id/tv_score" android:background="@drawable/shape_score_bg" android:padding="@dimen/dp_5"
                  android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="9.9"/>
    </FrameLayout>
    <TextView android:textColor="@color/color_808080" android:ellipsize="end" android:gravity="center_horizontal"
              android:layout_gravity="center" android:id="@+id/list_title" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_5"
              android:layout_marginTop="@dimen/dp_10" android:layout_marginRight="@dimen/dp_5"
              android:layout_marginBottom="@dimen/dp_15" android:maxLines="1"/>
</LinearLayout>