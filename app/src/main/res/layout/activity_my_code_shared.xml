<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/app_grey"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <ImageView android:id="@+id/iv_bg" android:background="@drawable/share_bg" android:layout_width="fill_parent"
               android:layout_height="fill_parent" android:layout_alignParentTop="true"
               android:layout_alignParentStart="true"/>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/relativeLayout"
                    android:background="@color/transparent" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_alignParentTop="true"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
        <ImageView android:id="@+id/code_back" android:padding="@dimen/dp_8" android:layout_width="wrap_content"
                   android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10"
                   android:layout_marginTop="@dimen/dp_10" android:layout_marginBottom="@dimen/dp_10"
                   android:src="@drawable/ic_back_black" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="@dimen/sp_18" android:textColor="@color/color_323232" android:gravity="center"
                  android:id="@+id/promotion_title_t" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10"
                  android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/center" android:background="@drawable/shape_white"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30" android:layout_below="@id/relativeLayout"
                    android:layout_centerHorizontal="true">
        <LinearLayout android:id="@+id/cardView" android:background="@drawable/shape_brown"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/sp_18" android:textColor="@color/white"
                          android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10"
                          android:text="扫码下载黄瓜视频APP"/>
                <ImageView android:layout_gravity="center_horizontal" android:id="@+id/qr_i"
                           android:layout_width="@dimen/dp_160" android:layout_height="@dimen/dp_160"
                           android:layout_marginLeft="@dimen/dp_30" android:layout_marginTop="@dimen/dp_10"
                           android:layout_marginRight="@dimen/dp_30" android:layout_marginBottom="@dimen/dp_10"/>
                <TextView android:textSize="@dimen/sp_40" android:textColor="@color/white" android:gravity="center"
                          android:layout_gravity="center_horizontal" android:id="@+id/put_t"
                          android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:layout_marginBottom="@dimen/dimen_1" android:text="您的推广码"/>
                <TextView android:textSize="@dimen/sp_14" android:textColor="@color/white" android:gravity="center"
                          android:layout_gravity="center_horizontal" android:id="@+id/textView2"
                          android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:layout_marginBottom="@dimen/dp_10" android:text="您的推广码"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView android:textColor="@color/color_323232" android:gravity="center" android:id="@+id/textView"
              android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dimen_25" android:layout_marginTop="@dimen/dp_10"
              android:layout_marginRight="@dimen/dimen_25" android:text="看片前请保存官网，被封后可在官网下载新的APP"
              android:layout_below="@id/center"/>
    <TextView android:textColor="@color/color_323232" android:gravity="center" android:id="@+id/tv_offical_web"
              android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dimen_25" android:layout_marginTop="@dimen/dp_30"
              android:layout_marginRight="@dimen/dimen_25" android:layout_below="@id/textView"/>
    <LinearLayout android:paddingLeft="@dimen/dp_16" android:paddingRight="@dimen/dp_16"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_20" android:layout_below="@id/tv_offical_web"
                  android:layout_centerHorizontal="true">
        <FrameLayout android:layout_gravity="center" android:layout_width="0.0dip" android:layout_height="wrap_content"
                     android:layout_weight="1.0">
            <TextView android:textSize="@dimen/sp_16" android:textStyle="bold" android:textColor="@color/app_divider"
                      android:gravity="center" android:id="@+id/screencap_b" android:background="@drawable/shape_defult"
                      android:paddingLeft="@dimen/dimen_15" android:paddingTop="@dimen/dimen_12"
                      android:paddingRight="@dimen/dimen_15" android:paddingBottom="@dimen/dimen_12"
                      android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="保存二维码"/>
            <ImageView android:id="@+id/ic_num_add" android:layout_width="@dimen/dp_40"
                       android:layout_height="@dimen/dp_40" android:src="@drawable/ic_add_num"/>
        </FrameLayout>
        <TextView android:textSize="@dimen/sp_16" android:textStyle="bold" android:textColor="@color/app_brown_light"
                  android:gravity="center" android:layout_gravity="center" android:id="@+id/copy_down_t"
                  android:background="@drawable/shape_white" android:paddingLeft="@dimen/dimen_15"
                  android:paddingTop="@dimen/dimen_12" android:paddingRight="@dimen/dimen_15"
                  android:paddingBottom="@dimen/dimen_12" android:layout_width="0.0dip"
                  android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15" android:text="复制推广链接"
                  android:layout_weight="1.0" app:layout_constraintBottom_toTopOf="@id/textView"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>
</RelativeLayout>