<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/black_55"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical"
                  android:background="@drawable/bg_sys_note" android:layout_width="fill_parent"
                  android:layout_height="@dimen/dp_365" android:layout_margin="@dimen/dp_30">
        <TextView android:textSize="@dimen/text_title" android:textColor="@color/white" android:layout_gravity="center"
                  android:id="@+id/sys_note_title_t" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_20" android:text="系统服务维护通知"/>
        <ScrollView android:id="@+id/sys_note_content_l" android:layout_width="fill_parent"
                    android:layout_height="0.0dip" android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_40" android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20" android:layout_weight="1.0">
            <WebView android:textSize="13.0sp" android:id="@+id/sys_note_content_t" android:layout_width="fill_parent"
                     android:layout_height="@dimen/dp_200"/>
        </ScrollView>
        <TextView android:textSize="@dimen/sp_16" android:textColor="@color/white" android:gravity="center"
                  android:layout_gravity="center" android:id="@+id/sys_note_info_t"
                  android:background="@drawable/shape_sys_info" android:layout_width="@dimen/dp_160"
                  android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dp_20" android:text="我知道了"/>
    </LinearLayout>
</LinearLayout>