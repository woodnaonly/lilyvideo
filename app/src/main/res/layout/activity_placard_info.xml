<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@color/white"
                                             android:layout_width="fill_parent"
                                             android:layout_height="fill_parent">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/relativeLayout"
                    android:background="@color/color_313233" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
        <ImageView android:id="@+id/placard_info_back" android:padding="@dimen/dp_8" android:layout_width="wrap_content"
                   android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10"
                   android:layout_marginTop="@dimen/dp_10" android:layout_marginBottom="@dimen/dp_10"
                   android:src="@drawable/ic_back_brown" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="@dimen/sp_18" android:textColor="@color/color_ccb084" android:gravity="center"
                  android:id="@+id/promotion_title_t" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:text="公告详情"
                  android:layout_centerInParent="true"/>
    </RelativeLayout>
    <WebView android:id="@+id/placard_info_web" android:layout_width="0.0dip" android:layout_height="0.0dip"
             app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@id/placecard_info_title"/>
    <TextView android:textStyle="bold" android:textColor="@color/text_brown" android:gravity="center"
              android:id="@+id/placecard_info_title" android:background="@color/white" android:padding="@dimen/dimen_14"
              android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="公告"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/relativeLayout"/>
</android.support.constraint.ConstraintLayout>