    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient android:startColor="@color/app_brown_dark" android:endColor="@color/app_brown_dark" android:angle="270.0" />
            </shape>
        </clip>
    </item>
</layer-list>